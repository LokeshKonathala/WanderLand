<% layout("/layouts/boilerplate") %>
<body>
  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
    <% for(let listing of allListings){ %>
      <div class="col mb-4">
        <a href="/listings/<%= listing._id %>" class="listing-links" style="text-decoration: none; color: inherit;">
          <div class="card">
            <img src="<%= listing.image.url%>" class="card-img-top" alt="<%= listing.title %>" style="height: 15rem">
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b><br>
                â‚¹<%= listing.price.toLocaleString("en-IN") %> / night
              </p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</body>
